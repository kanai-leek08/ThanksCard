<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Fromuser</th>
      <th>Touser</th>
      <th>Count</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.body %></td>
        <td><%= card.fromUser %></td>
        <td><%= card.toUser %></td>
        <td><%= card.count %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

